<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chat_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/layout_out_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_text_send"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_out_deleted_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_deleted_message"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/_12sdp"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_out_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="5dp"
                android:textColor="@color/msg_time"
                android:textSize="@dimen/_7sdp"
                tools:ignore="RtlSymmetry" />

        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_in_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/background_text_receive"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_in_deleted_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_sender_name"
                android:layout_marginStart="@dimen/_3sdp"
                android:drawableStart="@drawable/ic_deleted_message"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="5dp"
                android:paddingTop="4dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_in_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingEnd="5dp"
            android:textColor="@color/msg_time"
            android:textSize="@dimen/_7sdp"
            tools:ignore="RtlSymmetry" />

    </FrameLayout>

</RelativeLayout>