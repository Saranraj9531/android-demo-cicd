<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_audio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_send_audio"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/background_text_send"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_forwarded_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_forward_grey"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="@string/str_forwarded"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_runtime_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekbar_out"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/textview_total_time_out"
                android:fontFamily="@font/roboto_regular"
                android:text="02"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_total_time_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekbar_out"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:text="/ 09"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_mic_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_forwarded_out"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_mic" />

            <View
                android:id="@+id/view_send_audio"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textview_forwarded_out"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/imageview_mic_send"
                android:background="@color/light_grey" />


            <LinearLayout
                android:id="@+id/play_pause_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_forwarded_out"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/imageview_mic_send">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_play_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_audio_play"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_pause_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/imageview_mic_send"
                    android:padding="10dp"
                    android:src="@drawable/ic_audio_pause"
                    android:visibility="gone" />
            </LinearLayout>


            <SeekBar
                android:id="@+id/seekbar_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_forwarded_out"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/play_pause_layout"
                android:theme="@style/MySeekBarTheme" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_audio_time_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekbar_out"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="12:00"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl_sender_retry_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sender_retry_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_retry"
                    android:drawableStart="@drawable/ic_file_upload_white"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="@string/string_retry"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_receive_audio"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/background_text_receive"
