                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:drawableStart="@drawable/ic_forward_grey"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="@string/str_forwarded"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_forwarded_in"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_runtime_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textview_total_time_in"
                android:fontFamily="@font/roboto_regular"
                android:text="02"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_total_time_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:text="/ 09"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_mic_receive_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mic" />

            <View
                android:id="@+id/view_receive_audio"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/imageview_mic_receive_audio"
                android:background="@color/grey" />


            <LinearLayout
                android:id="@+id/play_pause_layout_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/view_receive_audio">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_play_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/imageview_mic_receive_audio"
                    android:paddingStart="5dp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:src="@drawable/ic_audio_play"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageview_pause_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/imageview_mic_send"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_audio_pause"
                    android:visibility="gone" />
            </LinearLayout>


            <SeekBar
                android:id="@+id/seekbar_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/play_pause_layout_receiver"
                android:theme="@style/MySeekBarTheme" />


        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_audio_time_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawablePadding="5dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:text="12:00"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10sdp"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout><!--
